<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
<!--    Translate controles the changes in X & Y directions
        100% X is offscreen right \ -100% X is offscreen left
        -100% -> 0% Y while slide screen to top \ 100% -> 0% will slide it to bottom -->
<translate
    android:duration ="@android:integer/config_shortAnimTime"
    android:fromXDelta="-100%"
    android:fromYDelta="0%"
    android:toXDelta="0%"
    android:toYDelta="0%"/>
</set>